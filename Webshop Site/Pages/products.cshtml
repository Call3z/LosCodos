@{
    Layout = "Master.cshtml";

    //todo hamta alla produkttyper
    IClothingDataBase products = new ClothingDateBase();
    var types = products.GetProducts().Distinct().GroupBy(x => x.Type).ToList();



    //lasa fr[n adressfaltet
